<header class="bar bar-nav">
  <%= link_to '', site_path(@site), class: "icon icon-left-nav pull-left" %>
  <h1 class="title"><%= @site.title %></h1>
</header>

<div class="content">
  <div class="content-padded">
    <div class="center">
      <%= image_tag 'http://placehold.it/250x250' %>
    </div>
    <div class="card">
      <ul class="table-view">
        <% @pages.each do |page| %>
          <li class="table-view-cell">
            <%= link_to page.title, [@site, page], class: "navigate-right" %>
          </li>
        <% end %>
      </ul>
    </div>
    <%= link_to 'new', new_site_page_path, class: 'btn btn-primary btn-block btn-outlined' %>
  </div>
</div>
